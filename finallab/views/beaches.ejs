  <div class="container-fluid w-100 h-100">
    <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-4 g-3">
      <% i = 16; %> <% beachesdata.forEach(item => { %>
      <div class="col-3">
        <div class="card">
          <div class="container-fluid mt-2">
            <div
              id="carouselId<%= i %>"
              class="carousel slide"
              data-bs-ride="carousel"
            >
              <ul class="carousel-indicators">
                <li
                  data-bs-target="#carouselId"
                  data-bs-slide-to="0"
                  class="active"
                  aria-current="true"
                  aria-label="First slide"
                ></li>
                <li
                  data-bs-target="#carouselId"
                  data-bs-slide-to="1"
                  aria-label="Second slide"
                ></li>
                <li
                  data-bs-target="#carouselId"
                  data-bs-slide-to="2"
                  aria-label="Third slide"
                ></li>
              </ul>
              <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                  <img
                    src="<%= item.pic1 %>"
                    class="w-100 d-block carousalpic"
                    alt="First slide"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="<%= item.pic2 %>"
                    class="w-100 d-block carousalpic"
                    alt="Second slide"
                  />
                </div>
                <div class="carousel-item">
                  <img
                    src="<%= item.pic3 %>"
                    class="w-100 d-block carousalpic"
                    alt="Third slide"
                  />
                </div>
              </div>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#carouselId<%= i %>"
                data-bs-slide="prev"
              >
                <span
                  class="carousel-control-prev-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#carouselId<%= i %>"
                data-bs-slide="next"
              >
                <span
                  class="carousel-control-next-icon"
                  aria-hidden="true"
                ></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          </div>
          <div class="card-body">
            <div class="d-flex">
              <h6 class="card-title w-100 me-4"><%= item.location %></h6>
              <div class="w-25 ms-3 ps-2">
                <i class="fas fa-star"></i><%= item.rating %>
              </div>
            </div>
            <div class="d-flex">
              <div>
                <p class="card-text text-secondary"><%= item.avaliability %></p>
                <p class="card-text text-secondary"><%= item.price %>/Night</p>
              </div>
              <a href="booking" style="color: #f7b267; margin-left: 45%"
                >Book it now!</a
              >
            </div>
          </div>
        </div>
      </div>
      <% i++; %> <% }); %>
    </div>
    <!-- Pagination Controls -->
    <div class="d-flex justify-content-center mt-4">
      <% if (currentPage > 1) { %>
      <a href="?page=<%= currentPage - 1 %>" class="btn btn-primary me-2"
        >Previous</a
      >
      <% } %> <% for (let page = 1; page <= totalPages; page++) { %>
      <a
        href="?page=<%= page %>"
        class="btn <%= page === currentPage ? 'btn-secondary' : 'btn-outline-primary' %> me-2"
        ><%= page %></a
      >
      <% } %> <% if (currentPage < totalPages) { %>
      <a href="?page=<%= currentPage + 1 %>" class="btn btn-primary">Next</a>
      <% } %>
