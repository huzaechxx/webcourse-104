<body class="bodypost">
  <div class="containerpost">
    <h1>Property Listing</h1>
    <form method="post">
      <div class="form-grouppost">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div class="form-grouppost">
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required />
      </div>
      <div class="form-grouppost">
        <label for="type">Type:</label>
        <select id="type" name="type" required>
          <option value="boat">Boats</option>
          <option value="beach">Beaches</option>
          <option value="cabin">Cabins</option>
          <!-- Add more options as needed -->
        </select>
      </div>
      <div class="form-grouppost">
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" required />
      </div>
      <div class="form-grouppost">
        <label for="availability">Availability:</label>
        <input type="text" id="avaliability" name="avaliability" required />
      </div>
      <div class="form-grouppost">
        <label for="pic1">Picture 1:</label>
        <input type="text" id="pic1" name="pic1" required />
      </div>
      <div class="form-grouppost">
        <label for="pic2">Picture 2:</label>
        <input type="text" id="pic2" name="pic2" required />
      </div>
      <div class="form-grouppost">
        <label for="pic3">Picture 3:</label>
        <input type="text" id="pic3" name="pic3" required />
      </div>
      <div class="form-grouppost">
        <input type="submit" value="Submit" />
      </div>
    </form>
  </div>
</body>
